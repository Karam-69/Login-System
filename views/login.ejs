<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Login</title>
	<link href="/css/log.css" rel="stylesheet" type="text/css">
</head>
<body>
	<div class="page">
		<div class="box"><!-- Start Box -->

				<div class="right-box">
					<div class="header">
						<div class="text-r">
							<h1>Sign in to Website</h1>
						</div>
					</div>

					<% if (messages.length > 0 )  { %>
					<div class="error">
							 <%= messages %>					
					</div>
					<% } %>
					<form action="/login" method="POST" >
						<input type="email" id="email" name="email" placeholder="Email" required><br>
						<input type="password" id="password" name="password" placeholder="Password" required><br>
						<button type="submit">Login</button>
					</form>
				</div>
				<span class="wave"></span>

			<div class="left-box">
				<h1>Welcome Back!</h1>
				<p class="text-left">Enter your personal details and start with us</p>
				<a href="/register"><span class="sign-up">Sign Up</span></a>
			</div>


			
		</div><!-- End Box -->
		<p class="copyright">Â© 2021 All Rights Reserved To <a href="https://github.com/Karam-69">Mohamed Karam.</a></p>
	</div>
</body>
</html>
