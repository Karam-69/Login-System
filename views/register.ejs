<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Register</title>
	<link href="/css/reg.css" rel="stylesheet" type="text/css">
</head>
<body>
	<div class="page">
		<div class="box"><!-- Start Box -->

			<div class="right-box">

				<div class="header">
					<div class="text-r">
						<h1>Create an account</h1>
					</div>
				</div>
				
				<% if (messages.length > 0 )  { %>
					<div class="error">
							 <%= messages %>					
					</div>
					<% } %>

				<form action="/register" method="POST" >
					<input type="text" id="name" name="name" placeholder="Username" required><br>
					<input type="email" id="email" name="email" placeholder="Email" required><br>
					<input type="password" id="password" name="password" placeholder="Password" required><br>
					<button type="submit">Register</button>
				</form>

			</div>

			<div class="left-box">
				<h1>Hello, Friend!</h1>
				<p class="text-left">To keep connected with us please login with your info</p>
				<div class="Sign"> <a href="/login"><span class="sign-in">Sign in</span></a>  </div>

			</div>
			
		</div><!-- End Box -->
		<p class="copyright">Â© 2021 All Rights Reserved To <a href="https://github.com/Karam-69">Mohamed Karam.</a></p>

	</div>
</body>
</html>
